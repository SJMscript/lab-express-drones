<div>

    <h2>Available drones</h2>

    <div>
    {{#each this.allDrones}}
        <li>
            <span>Name: {{this.name}} |</span>
            
            <span>Propellers: {{this.propellers}} |</span>
            
            <span>Max Speed: {{this.maxSpeed}} |</span>
        </li>
        <br>
        <button><a href="/drones/{{this._id}}/edit">Edit</a></button>


        <form action="/drones/{{this._id}}/delete" method="post">
        <button>Delete</button>
        </form>


    {{/each}}
    </div>

</div>