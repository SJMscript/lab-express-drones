<div>

  <h2>Update the drone</h2>

  <form action="/drones/{{this.updateDrone._id}}/edit" method="post">
    <label for="name">Nombre</label>
    <input type="text" name="name" value="{{this.updateDrone.name}}">
    <br>
    <label for="propellers">Propellers</label>
    <input type="number" name="propellers" value="{{this.updateDrone.propellers}}">
    <br>
    <label for="maxSpeed">Max Speed</label>
    <input type="number" name="maxSpeed" value="{{this.updateDrone.maxSpeed}}">
    <br>
    <button>Actualizar</button>

  </form>

</div>